<h1>Productos en Tiempo Real</h1>

<div style="margin-bottom: 2rem; background: white; padding: 1.5rem; border-radius: 8px;">
    <h3>Agregar Producto</h3>
    <form id="formProducto">
        <div style="margin-bottom: 1rem;">
            <label>Nombre:</label>
            <input type="text" id="title" required style="width: 100%; padding: 0.5rem;">
        </div>
        <div style="margin-bottom: 1rem;">
            <label>Descripción:</label>
            <input type="text" id="description" required style="width: 100%; padding: 0.5rem;">
        </div>
        <div style="margin-bottom: 1rem;">
            <label>Código:</label>
            <input type="text" id="code" required style="width: 100%; padding: 0.5rem;">
        </div>
        <div style="margin-bottom: 1rem;">
            <label>Precio:</label>
            <input type="number" id="price" required style="width: 100%; padding: 0.5rem;">
        </div>
        <div style="margin-bottom: 1rem;">
            <label>Stock:</label>
            <input type="number" id="stock" required style="width: 100%; padding: 0.5rem;">
        </div>
        <div style="margin-bottom: 1rem;">
            <label>Categoría:</label>
            <input type="text" id="category" required style="width: 100%; padding: 0.5rem;">
        </div>
        <button type="submit" style="background-color: #4CAF50; color: white; padding: 0.7rem 1.5rem; border: none; border-radius: 4px; cursor: pointer;">
            Agregar Producto
        </button>
    </form>
</div>

<div id="productosContainer" class="products-grid">
    <p>Cargando productos...</p>
</div>

<script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
<script src="/js/realtime.js"></script>
